<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hihihahahehe.portablept.fragments.PersonFragment">

   <RelativeLayout
       android:padding="16dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/iv_avatar"
           android:layout_centerHorizontal="true"
           android:layout_width="120dp"
           android:layout_height="120dp" />

       <TextView
           android:id="@+id/tv_name"
           android:padding="20dp"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_below="@+id/iv_avatar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textAlignment="center"/>

       <android.support.v7.widget.CardView
           android:layout_marginBottom="20dp"
           android:id="@+id/cv_information"
           android:layout_below="@+id/tv_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:weightSum="10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:padding="10dp"
                   android:textSize="16sp"
                   android:text="Thông tin cá nhân"
                   android:textAlignment="viewStart"
                   android:layout_weight="8.5"
                   android:layout_width="0dp"
                   android:layout_height="match_parent" />

               <ImageView
                   android:scaleType="centerInside"
                   android:src="@drawable/ic_info_outline"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.5"/>
           </LinearLayout>
       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:id="@+id/cv_my_pack"
           android:layout_marginBottom="20dp"
           android:layout_below="@+id/cv_information"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:weightSum="10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:padding="10dp"
                   android:textSize="16sp"
                   android:text="Gói tập của tôi"
                   android:textAlignment="viewStart"
                   android:layout_weight="8.5"
                   android:layout_width="0dp"
                   android:layout_height="match_parent" />

               <ImageView
                   android:scaleType="centerInside"
                   android:src="@drawable/ic_list"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.5"/>
           </LinearLayout>

       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:id="@+id/cv_favourite"
           android:layout_marginBottom="20dp"
           android:layout_below="@+id/cv_my_pack"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:weightSum="10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:padding="10dp"
                   android:textSize="16sp"
                   android:text="Huấn luyện viên yêu thích"
                   android:textAlignment="viewStart"
                   android:layout_weight="8.5"
                   android:layout_width="0dp"
                   android:layout_height="match_parent" />

               <ImageView
                   android:scaleType="centerInside"
                   android:src="@drawable/ic_favorite_border"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.5"/>
           </LinearLayout>

       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:id="@+id/cv_share"
           android:layout_marginBottom="20dp"
           android:layout_below="@+id/cv_favourite"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:weightSum="10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:padding="10dp"
                   android:textSize="16sp"
                   android:text="Chia sẻ với bạn bè"
                   android:textAlignment="viewStart"
                   android:layout_weight="8.5"
                   android:layout_width="0dp"
                   android:layout_height="match_parent" />

               <ImageView
                   android:scaleType="centerInside"
                   android:src="@drawable/ic_share"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.5"/>
           </LinearLayout>

       </android.support.v7.widget.CardView>
   </RelativeLayout>
</RelativeLayout>
